<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="www.voca.ria.vocabulary.mapper.VocaMapper">
	<resultMap id="rmMissionVO" type="www.voca.ria.vocabulary.model.MissionVO">
		<result property="word" column="word" />
		<result property="isRead" column="hasread" />
		<result property="isComplete" column="complete" />
	</resultMap>
	
	<resultMap id="rmWordVO" type="www.voca.ria.vocabulary.model.WordVO">
		<result property="name" column="name" />
		<result property="meaning" column="meaning" />
	</resultMap>
	
	
	<!-- public List<MissionVO> listAllMission(@Param("student") AccountVO student,
			@Param("dateString") String dateString); -->
	<select id="listAllMission" resultMap="rmMissionVO">
		select word, hasread, complete
		  from t_daily_mission
		 where account = #{student.id}
		   and time = #{dateString}
	</select>
	
	<!-- public String setupTodayWords(@Param("student") AccountVO student,
			@Param("choiseNum") int choiseNum); -->
	<insert id="setupTodayWords">
		call DAILY_VOCALIST(#{student.id}, ${choiseNum}); 
	</insert>
</mapper>
